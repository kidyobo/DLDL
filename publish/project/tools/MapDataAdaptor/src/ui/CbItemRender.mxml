<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="150" height="30" toolTip="{data.path}">
	<s:layout>
		<s:HorizontalLayout paddingLeft="10" verticalAlign="middle"/>
	</s:layout>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function changeHandler(event:Event):void
			{
				data.ck = ck.selected;
			}
			
		]]>
	</fx:Script>
	<s:CheckBox id="ck" selected="{data.ck}" x="0" y="0" change="changeHandler(event)"/>
	<s:Label text="{data.label}"/>
	<s:Label text="{CbItemData.STATUS_NONE == data.hasProcessed ? '' : (CbItemData.STATUS_PROCCESSING == data.hasProcessed ? '处理中' : '已完成')}" color="{CbItemData.STATUS_PROCCESSING == data.hasProcessed ? 0xffff00 : 0x00ff00}"/>
</s:ItemRenderer>
